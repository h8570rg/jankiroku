{
  "extends": ["next/core-web-vitals", "prettier", "plugin:import/recommended"],
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc", "caseInsensitive": false },
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "newlines-between": "never",
        "warnOnUnassignedImports": true
      }
    ]
  }
}
